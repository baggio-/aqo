<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">
    <TableSelectDialog id="f4_dialog"
                       title="{i18n>/SEL_OPTION}"
                       model="true"
                       class="sapUiSizeCompact"
                       search="search"
                       confirm="confirm"
                       items="{
                            path : '/DATA'
                        }">
        <columns>
            <Column hAlign="Begin" visible="false">
                <Text text="{i18n>/FAV}"/>
            </Column>
            <Column hAlign="Begin">
                <Text text="{i18n>/OBJECT}"/>
            </Column>
            <Column hAlign="Begin">
                <Text text="{i18n>/SUBOBJ}"/>
            </Column>
            <Column hAlign="Begin">
                <Text text="{i18n>/CHANGED}"/>
            </Column>
            <Column hAlign="End">
                <Text text="{i18n>/DATE}"/>
            </Column>
            <Column hAlign="End">
                <Text text="{i18n>/TIME}"/>
            </Column>
        </columns>

        <items>
            <ColumnListItem>
                <cells>
                    <Label text="{FAV}"/>
                    <Label design="{ path: 'FAV', formatter: '.isFavorite' }" text="{OBJECT}"></Label>
                    <Label design="{ path: 'FAV', formatter: '.isFavorite' }" text="{SUBOBJECT}"></Label>
                    <Label design="{ path: 'FAV', formatter: '.isFavorite' }" text="{UNAME}"></Label>
                    <Label design="{ path: 'FAV', formatter: '.isFavorite' }" text="{ path: 'UDATE', formatter: '.formatDate' }"></Label>
                    <Label design="{ path: 'FAV', formatter: '.isFavorite' }" text="{ path: 'UTIME', formatter: '.formatTime' }"></Label>
                </cells>
            </ColumnListItem>
        </items>
    </TableSelectDialog>
</core:FragmentDefinition>