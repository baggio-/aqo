<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">

    <Dialog id="start_dialog"
            title="{i18n>/SEL_OPTION}"
            model="true"
            class="sapUiSizeCompact"
            contentWidth="29em">

        <content>
            <VBox>
                <Label text="{i18n>/OBJECT}" labelFor="edOBJECT"/>
                <Input id="edOBJECT"
                       type="sap.m.InputType.Text"
                       width="24em"
                       placeholder="..."
                       showSuggestion="true"
                       showValueHelp="true"
                       suggestionItemSelected="suggestionItemSelected"
                       valueHelpRequest="valueHelpRequest"
                       suggestionItems="{/DATA}">

                    <suggestionItems>
                        <core:ListItem
                                text="{OBJECT}"
                                additionalText="{SUBOBJECT}"
                                icon="{FAV}"/>
                    </suggestionItems>
                </Input>

                <Label text="{i18n>/SUBOBJ}" labelFor="edSUBOBJECT"/>
                <Input id="edSUBOBJECT"
                       type="sap.m.InputType.Text"
                       width="24em"
                       placeholder="..."
                       showSuggestion="true"
                       showValueHelp="true"
                       suggestionItemSelected="suggestionItemSelected"
                       valueHelpRequest="valueHelpRequest"
                       suggestionItems="{/DATA}">

                    <suggestionItems>
                        <core:ListItem
                                text="{SUBOBJECT}"
                                additionalText="{OBJECT}"
                                icon="{FAV}"/>
                    </suggestionItems>
                </Input>
            </VBox>
        </content>

        <buttons>

            <Button icon="sap-icon://accept"
                    press="show_option"/>

            <Button icon="sap-icon://synchronize"
                    press="toggle_old_ui"/>

            <Button id="bt_favorite"
                    icon="sap-icon://unfavorite"
                    press="set_favorite"/>

            <Button icon="sap-icon://visits"
                    press="close_app"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>