<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">

    <ColumnListItem>
        <cells>
            <HBox>
                <core:Icon class="sapUiTinyMarginEnd"
                           src="{parts: [{path: 'KIND'}, {path: 'IS_OLD'}], formatter: '.get_kind_icon'}"
                           press="on_press_kind_icon"/>
                <Label text="{NAME}" design="{ path: 'IS_OLD', formatter: '.design_bold_old' }"/>
            </HBox>

            <Input value="{TEXT}"
                   enabled="{ parts: [{path: '/DATA/READ_ONLY'}, {path: '/DATA/DEV_MANDT'}, {path: 'EDIT'}], formatter: '.isEnabled'}"/>

            <CheckBox selected="{EDIT}"
                      enabled="{ parts: [{path: '/DATA/READ_ONLY'}, {path: '/DATA/DEV_MANDT'}, {path: 'EDIT'}], formatter: '.isEnabled'}"/>

            <HBox>
                <core:Icon class="sapUiTinyMarginEnd sapUiTinyMarginTop"
                           src="{path: 'ROLLNAME', formatter: '.get_drill_down_icon'}"/>
                <Input value="{ROLLNAME}"
                       enabled="{ parts: [{path: '/DATA/READ_ONLY'}, {path: '/DATA/DEV_MANDT'}, {path: 'EDIT'}], formatter: '.isEnabled'}"/>
            </HBox>

            <Label text="{TEXT}"/>
        </cells>
    </ColumnListItem>
</core:FragmentDefinition>